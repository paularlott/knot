{{ template "layout-base.tmpl" . }}

{{ define "pageTitle" }}{{ if .isEdit }}Edit Volume{{ else }}Create Volume{{ end }}{{ end }}

{{ define "mainContent" }}
<main class="relative w-full h-full overflow-y-auto lg:ml-64 pb-8">
  <div class="grid grid-cols-1 px-4 pt-6 lg:grid-cols-4 gap-2 xl:gap-4" x-data="volumeForm({{ .isEdit }}, '{{ .volumeId }}')" x-init="initData()">

    <div class="mb-4 col-span-full xl:mb-2">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">{{ if .isEdit }}Edit Volume{{ else }}Create Volume{{ end }}</h1>
    </div>

    <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-xs col-span-full dark:border-gray-700 sm:p-6 dark:bg-gray-800">

      {{ template "loading" . }}
      <form class="space-y-6" action="" method="POST" @submit.prevent="submitData" x-show="!loading" x-cloak>
        <div>
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-field" name="name" x-on:keyup.debounce.500ms="checkName()" :class="{'form-field-error': !nameValid}" placeholder="Volume name" x-model="formData.name">
          <div x-show="!nameValid" class="error-message" x-cloak>Volume name can be a max 64 characters.</div>
        </div>
        <div class="mb-4">
          <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Platform</label>
          <div class="flex items-center space-x-2 p-2 bg-gray-100 dark:bg-gray-700 rounded-lg w-fit">
            <label class="relative">
              <input
                type="radio"
                name="platform"
                value="nomad"
                x-model="formData.platform"
                class="sr-only peer"
                {{ if .isEdit }}@change="showPlatformWarning = true"{{ end }}
              >
              <div class="select-none cursor-pointer px-2 sm:px-4 py-2 rounded-lg text-sm font-medium
                peer-checked:bg-blue-600 peer-checked:text-white
                peer-focus:ring-2 peer-focus:ring-blue-300
                transition-colors duration-200 ease-in-out
                text-gray-700 dark:text-gray-200 peer-checked:dark:text-white
                hover:bg-gray-200 hover:text-gray-700 hover:peer-checked:bg-blue-600 hover:peer-checked:text-white hover:dark:bg-gray-600 hover:dark:text-white hover:dark:peer-checked:bg-blue-600">
                Nomad
              </div>
            </label>
            
            <!-- Local Container split button -->
            <div class="relative inline-flex" x-data="{ open: false, isLocalContainer() { return ['docker', 'podman', 'apple', 'container'].includes(formData.platform); } }">
              <label class="relative group">
                <input
                  type="radio"
                  name="platform"
                  :value="isLocalContainer() ? formData.platform : 'container'"
                  :checked="isLocalContainer()"
                  @change="if (!isLocalContainer()) formData.platform = 'container'; {{ if .isEdit }}showPlatformWarning = true{{ end }}"
                  class="sr-only peer"
                >
                <div class="select-none cursor-pointer px-2 sm:px-4 py-2 rounded-l-lg text-sm font-medium transition-colors duration-200 ease-in-out"
                  :class="isLocalContainer() ? 'bg-blue-600 text-white peer-focus:ring-2 peer-focus:ring-blue-300 group-hover:bg-blue-500' : 'text-gray-700 dark:text-gray-200 group-hover:bg-gray-200 group-hover:dark:bg-gray-600'">
                  <span x-text="formData.platform === 'docker' ? 'Docker' : formData.platform === 'podman' ? 'Podman' : formData.platform === 'apple' ? 'Apple' : 'Local Container'"></span>
                </div>
              </label>
              <button
                type="button"
                @click="open = !open"
                @click.away="open = false"
                class="px-2 py-2 rounded-r-lg text-sm font-medium border-l transition-colors duration-200 ease-in-out"
                :class="isLocalContainer() ? 'bg-blue-600 text-white border-blue-700 dark:border-blue-500 hover:bg-blue-500' : 'bg-transparent text-gray-700 dark:text-gray-200 border-gray-300 dark:border-gray-600 hover:bg-gray-200 hover:dark:bg-gray-600'"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div
                x-show="open"
                x-cloak
                class="absolute top-full mt-1 right-0 z-50 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-xl min-w-[160px]"
              >
                <div class="p-1">
                  <button
                    type="button"
                    @click="formData.platform = 'container'; open = false; {{ if .isEdit }}showPlatformWarning = true{{ end }}"
                    class="w-full text-left px-3 py-2 text-sm rounded hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200"
                  >
                    Local Container
                  </button>
                  <button
                    type="button"
                    @click="formData.platform = 'docker'; open = false; {{ if .isEdit }}showPlatformWarning = true{{ end }}"
                    class="w-full text-left px-3 py-2 text-sm rounded hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200"
                  >
                    Docker
                  </button>
                  <button
                    type="button"
                    @click="formData.platform = 'podman'; open = false; {{ if .isEdit }}showPlatformWarning = true{{ end }}"
                    class="w-full text-left px-3 py-2 text-sm rounded hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200"
                  >
                    Podman
                  </button>
                  <button
                    type="button"
                    @click="formData.platform = 'apple'; open = false; {{ if .isEdit }}showPlatformWarning = true{{ end }}"
                    class="w-full text-left px-3 py-2 text-sm rounded hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-200"
                  >
                    Apple
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div>
          <label for="vol" class="form-label">Volume Definition (YAML)</label>
          <div :class="{'form-field-error': !volValid, 'editor-wrap': true}">
            <textarea name="vol" id="vol"></textarea>
          </div>
          <div x-show="!volValid" class="error-message" x-cloak>Volume definition must be valid YAML.</div>
        </div>

        <button type="submit" class="btn-primary mr-2" :value="buttonLabel" x-text="buttonLabel" :disabled="loading" x-on:click="stayOnPage=true"></button>
        <button type="submit" class="btn-primary" x-show="isEdit" x-on:click="stayOnPage=false">Save</button>

      </form>

    </div>

    <div x-cloak x-show="showPlatformWarning" x-transition.opacity.duration.200ms x-trap.inert.noscroll="showPlatformWarning" @keydown.esc.window="showPlatformWarning = false" @click.self="showPlatformWarning = false" class="fixed top-0 left-0 right-0 bottom-0 inset-0 z-[60] flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-xs sm:items-center lg:p-8" role="dialog" aria-modal="true" aria-labelledby="defaultModalTitle">
      <!-- Modal Dialog -->
      <div x-show="showPlatformWarning" x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity" x-transition:enter-start="scale-0" x-transition:enter-end="scale-100" class="flex max-w-lg flex-col gap-4 overflow-hidden rounded-lg border border-grey-200 bg-white text-neutral-600 dark:bg-gray-800 dark:border-gray-700 dark:text-neutral-300 shadow-xl">
        <!-- Dialog Header -->
        <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4 dark:border-gray-700 dark:bg-gray-800/20">
          <div class="flex items-center justify-center rounded-full bg-yellow-500/20 text-yellow-500 p-1">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126ZM12 15.75h.007v.008H12v-.008Z" />
            </svg>
          </div>
          <h3 class="font-semibold tracking-wide text-neutral-900 dark:text-white">Platform Changed</h3>
          <button @click="showPlatformWarning = false" aria-label="close modal" class="cursor-pointer">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" stroke="currentColor" fill="none" stroke-width="1.4" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        <!-- Dialog Body -->
        <div class="px-4 py-4 text-center">
          <p>Changing the platform that the volume is using may have unintended consequences including loss of data.</p>
          <p>Only proceed if you are sure about the changes you are making.</p>
        </div>
        <!-- Dialog Footer -->
        <div class="flex flex-col-reverse justify-between gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4 dark:border-gray-700 dark:bg-gray-800/20 sm:flex-row sm:items-center md:justify-end">
            <button @click="showPlatformWarning = false" type="button" class="cursor-pointer whitespace-nowrap rounded-lg bg-red-700 hover:bg-red-800 px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-white dark:bg-red-600 dark:hover:bg-red-700 dark:focus-visible:outline-white">Dismiss</button>
        </div>
      </div>
    </div>

  </div>
</main>
{{ end }}
