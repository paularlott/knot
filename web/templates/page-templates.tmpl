{{ template "layout-base.tmpl" . }}

{{ define "pageTitle" }}Templates{{ end }}

{{ define "mainContent" }}
<main class="relative w-full h-full overflow-y-auto lg:ml-64 pb-8" x-data="templateListComponent({{ .permissionManageSpaces }}, '{{ .zone }}')">
  <div class="grid grid-cols-1 px-4 pt-6 xl:grid-cols-4 gap-2 xl:gap-4">

    <div class="mb-4 col-span-full xl:mb-2">
      <h1 class="text-xl font-semibold text-gray-900 sm:text-2xl dark:text-white">Templates</h1>
    </div>

    <form class="col-span-full sm:flex justify-between">
      <div class="flex" x-data>
        <div class="w-full sm:w-auto">
          <label for="search" class="sr-only">Search</label>
          <div class="relative mt-1 sm:w-48 lg:w-64 xl:w-96 flex items-center">
            <input type="search" name="search" id="search" class="form-field bg-white grow pr-10" placeholder="Search" x-model="searchTerm" x-on:input="searchChanged">
            <div class="absolute right-2 text-sm text-gray-500 dark:text-gray-400 font-sans ml-2 text-nowrap">âŒ˜ K</div>
          </div>
        </div>
        {{ if .permissionManageTemplates }}
        <button @click.prevent="$refs.panel.toggle" class="text-gray-500 dark:text-gray-400 text-sm px-2.5 py-3 cursor-pointer ml-2 hover:text-gray-700 dark:hover:text-gray-200">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z" />
          </svg> <span class="sr-only">Filter</span>
        </button>

        <div x-ref="panel" x-float.teleport.placement.bottom-end.flip="" @click.away="$refs.panel.close" @keydown.window.escape="$refs.panel.close" class="fixed z-50 my-1 text-base p-2 pr-4 list-none bg-white rounded-lg shadow-xl border border-gray-200 dark:bg-gray-800 dark:border-gray-700 block whitespace-nowrap" id="panel-cDV5GZ12" aria-modal="true" role="dialog" style="position: fixed; display: block; left: 492.367px; top: 109px;">

          <div class="mb-4 mt-2">
            <label class="flex items-center cursor-pointer mb-2">
              <input type="checkbox" class="sr-only peer" value="1" @change="searchChanged" :checked="showAll" x-model="showAll">
              <div class="relative w-9 h-5 bg-gray-200 peer-focus:outline-hidden peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:rtl:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 peer-checked:dark:bg-blue-600"></div>
              <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300">Show All Zones</span>
            </label>
          </div>
          <div class="mb-2">
            <label class="flex items-center cursor-pointer mb-2">
              <input type="checkbox" class="sr-only peer" value="1" @change="searchChanged" :checked="showInactive" x-model="showInactive">
              <div class="relative w-9 h-5 bg-gray-200 peer-focus:outline-hidden peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:rtl:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600 peer-checked:dark:bg-blue-600"></div>
              <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300">Show Inactive</span>
            </label>
          </div>

        </div>
        {{ end }}
      </div>
      {{ if or .permissionManageTemplates .isLeafNode }}
      <div>
        <a href="/templates/create" class="btn-primary flex items-center mt-1">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 mr-2">
            <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
          </svg>
          New Template
        </a>
      </div>
      {{ end }}
    </form>

    <!-- div class="mb-4 col-span-full" -->
    <div class="p-4 mb-4 bg-white border border-gray-200 rounded-lg shadow-xs col-span-full dark:border-gray-700 sm:p-6 dark:bg-gray-800">

      {{ template "loading" . }}
      <div x-show="!loading" x-cloak class="relative overflow-x-auto">
        <table class="w-full text-sm text-left rtl:text-right">
          <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
              <th scope="col" class="px-4 py-3">Name & Description</th>
              <th scope="col" class="px-4 py-3 hidden md:table-cell">Type</th>
              <th scope="col" class="px-4 py-3 hidden md:table-cell">Status</th>
              <th scope="col" class="px-4 py-3 hidden md:table-cell">Resources</th>
              {{ if or .permissionManageTemplates (not .isLeafNode) }}
              <th scope="col" class="px-4 py-3 hidden md:table-cell">Availability</th>
              {{ end }}
              <th scope="col" class="px-4 py-3">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <template x-for="t in templates" :key="t.template_id">
              <template x-if="!t.searchHide">
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600/10">
                  <!-- Name & Description -->
                  <td class="px-4 py-3">
                    <div class="flex items-center gap-4">
                      <img x-show="t.icon_url && t.icon_url_exists" :src="t.icon_url" alt="Icon" class="hidden lg:block size-8" />

                      <div>
                        <div class="text-base font-semibold text-gray-900 dark:text-white" x-text="t.name"></div>
                        <div class="text-xs text-gray-500 dark:text-gray-400" x-text="t.description"></div>

                        <!-- Mobile-only resource info -->
                        <div class="md:hidden flex flex-col gap-1 mt-2">
                          <div class="flex flex-col gap-1">
                            <span x-show="t.platform == 'docker'" class="inline-block w-fit bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 whitespace-nowrap">Docker</span>
                            <span x-show="t.platform == 'podman'" class="inline-block w-fit bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 whitespace-nowrap">Podman</span>
                            <span x-show="t.platform == 'apple'" class="inline-block w-fit bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 whitespace-nowrap">Apple</span>
                            <span x-show="t.platform == 'nomad'" class="inline-block w-fit bg-green-100 text-green-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-green-400 border border-green-400 whitespace-nowrap">Nomad</span>
                            <span x-show="t.platform == 'manual'" class="inline-block w-fit bg-yellow-100 text-yellow-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300">Manual</span>
                            {{ if .isLeafNode }}
                            <span x-show="t.is_managed" class="inline-block mt-1 w-fit bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-gray-400 border border-gray-500">Managed</span>
                            {{ end }}
                          </div>

                          <span x-show="t.active" class="inline-block w-fit bg-green-100 text-green-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-green-400 border border-green-400">Active</span>
                          <span x-show="!t.active" class="inline-block w-fit bg-red-100 text-red-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-red-400 border border-red-400">Inactive</span>

                          <div class="text-xs text-gray-500 dark:text-gray-400">
                            <span class="font-medium">Compute:</span> <span x-text="t.compute_units"></span>
                          </div>
                          <div class="text-xs text-gray-500 dark:text-gray-400">
                            <span class="font-medium">Storage:</span> <span x-text="t.storage_units"></span>
                          </div>

                          <!-- Mobile-only schedule indicators -->
                          <template x-if="t.schedule_enabled">
                            <div class="text-xs text-gray-500 dark:text-gray-400">
                              <span class="font-medium">Schedule:</span>
                              <div class="flex flex-wrap gap-1 mt-1">
                                <template x-for="index in 7" :key="index">
                                  <div x-show="t.schedule[index % 7].enabled" class="inline" x-data>
                                    <span @click="$refs.panel.toggle" class="inline-block bg-blue-100 text-blue-800 text-xs font-medium px-1 py-0.5 rounded-sm dark:bg-gray-700 dark:text-blue-400 border border-blue-400" x-text="getDayOfWeek(index % 7).substring(0,3)"></span>
                                    <div x-ref="panel" x-float.teleport.placement.bottom-start.flip @click.away="$refs.panel.close" @keydown.window.escape="$refs.panel.close" class="fixed z-50 my-1 p-2 bg-white rounded-lg shadow-xl border border-gray-200 dark:bg-gray-800 dark:border-gray-700 dark:divide-gray-600 block whitespace-nowrap" x-cloak>
                                      <span x-text="t.schedule[index % 7].from"></span> - <span x-text="t.schedule[index % 7].to"></span>
                                    </div>
                                  </div>
                                </template>
                              </div>
                            </div>
                          </template>

                          <!-- Mobile-only max uptime -->
                          <template x-if="t.max_uptime_unit != 'disabled'">
                            <div class="text-xs text-gray-500 dark:text-gray-400">
                              <span class="font-medium">Max Uptime:</span> <span x-text="getMaxUptime(t.max_uptime, t.max_uptime_unit)"></span>
                            </div>
                          </template>
                        </div>

                        <!-- Mobile-only zone/groups -->
                        {{ if and .permissionManageTemplates (not .isLeafNode) }}
                        <div class="md:hidden mt-2">
                          <template x-if="t.group_names && t.group_names.length > 0">
                            <div class="text-xs text-gray-500 dark:text-gray-400">
                              <span class="font-medium">Groups:</span>
                              <div class="flex flex-wrap gap-1 mt-1">
                                <template x-for="group in t.group_names">
                                  <span class="inline-block bg-yellow-100 text-yellow-800 text-xs font-medium px-1.5 py-0.5 rounded-sm dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300 whitespace-nowrap" x-text="group"></span>
                                </template>
                              </div>
                            </div>
                          </template>
                          <template x-if="t.zones && t.zones.length > 0">
                            <div class="text-xs text-gray-500 dark:text-gray-400" :class="t.group_names.length ? 'mt-1' : ''">
                              <span class="font-medium">Zones:</span>
                              <div class="flex flex-wrap gap-1 mt-1">
                                <template x-for="l in t.zones">
                                  <span class="inline-block bg-yellow-100 text-yellow-800 text-xs font-medium px-1.5 py-0.5 rounded-sm dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300 whitespace-nowrap" x-text="l"></span>
                                </template>
                              </div>
                            </div>
                          </template>
                        </div>
                        {{ end }}

                        <!-- Usage & Deployed (mobile only) -->
                        {{ if .permissionManageTemplates }}
                        <div class="md:hidden mt-2 flex gap-4">
                          <div class="text-xs text-gray-500 dark:text-gray-400">
                            <span class="font-medium">Usage:</span> <span x-text="t.usage"></span>
                          </div>
                          <div class="text-xs text-gray-500 dark:text-gray-400">
                            <span class="font-medium">Deployed:</span> <span x-text="t.deployed"></span>
                          </div>
                        </div>
                        {{ end }}
                      </div>
                    </div>
                  </td>

                  <!-- Type (desktop only) -->
                  <td class="px-4 py-3 hidden md:table-cell">
                    <div class="flex flex-col gap-1">
                      <span x-show="t.platform == 'docker'" class="inline-block w-fit bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 whitespace-nowrap">Docker</span>
                      <span x-show="t.platform == 'podman'" class="inline-block w-fit bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 whitespace-nowrap">Podman</span>
                      <span x-show="t.platform == 'apple'" class="inline-block w-fit bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-indigo-400 border border-indigo-400 whitespace-nowrap">Apple</span>
                      <span x-show="t.platform == 'nomad'" class="inline-block w-fit bg-green-100 text-green-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-green-400 border border-green-400 whitespace-nowrap">Nomad</span>
                      <span x-show="t.platform == 'manual'" class="inline-block w-fit bg-yellow-100 text-yellow-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300">Manual</span>
                      {{ if .isLeafNode }}
                      <span x-show="t.is_managed" class="inline-block mt-1 w-fit bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-gray-400 border border-gray-500">Managed</span>
                      {{ end }}
                    </div>
                  </td>

                  <!-- Status (desktop only) -->
                  <td class="px-4 py-3 hidden md:table-cell">
                    <div class="flex flex-col gap-1">
                      <span x-show="t.active" class="inline-block w-fit bg-green-100 text-green-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-green-400 border border-green-400">Active</span>
                      <span x-show="!t.active" class="inline-block w-fit bg-red-100 text-red-800 text-xs font-medium px-2 py-0.5 rounded-sm dark:bg-gray-700 dark:text-red-400 border border-red-400">Inactive</span>

                      {{ if .permissionManageTemplates }}
                      <div class="flex flex-col gap-1 mt-1">
                        <div class="text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap">
                          <span class="font-medium">Usage:</span> <span x-text="t.usage"></span>
                        </div>
                        <div class="text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap">
                          <span class="font-medium">Deployed:</span> <span x-text="t.deployed"></span>
                        </div>
                      </div>
                      {{ end }}
                    </div>
                  </td>

                  <!-- Resource Units (desktop only) -->
                  <td class="px-4 py-3 hidden md:table-cell">
                    <div class="flex flex-col gap-1">
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <span class="font-medium">Compute:</span> <span x-text="t.compute_units"></span>
                      </div>
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <span class="font-medium">Storage:</span> <span x-text="t.storage_units"></span>
                      </div>

                      <!-- Schedule indicators -->
                      <template x-if="t.schedule_enabled">
                        <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                          <span class="font-medium">Schedule:</span>
                          <div class="flex flex-wrap gap-1 mt-1">
                            <template x-for="index in 7" :key="index">
                              <div x-show="t.schedule[index % 7].enabled" class="inline" x-data>
                                <span @click="$refs.panel.toggle" class="inline-block bg-blue-100 text-blue-800 text-xs font-medium px-1 py-0.5 rounded-sm dark:bg-gray-700 dark:text-blue-400 border border-blue-400 cursor-pointer" x-text="getDayOfWeek(index % 7).substring(0,3)"></span>
                                <div x-ref="panel" x-float.teleport.placement.bottom-center.flip @click.away="$refs.panel.close" @keydown.window.escape="$refs.panel.close" class="fixed z-50 my-1 p-2 bg-white rounded-lg shadow-xl border border-gray-200 dark:bg-gray-800 dark:border-gray-700 dark:divide-gray-600 block whitespace-nowrap" x-cloak>
                                  <span x-text="t.schedule[index % 7].from"></span> - <span x-text="t.schedule[index % 7].to"></span>
                                </div>
                              </div>
                            </template>
                          </div>
                        </div>
                      </template>

                      <!-- Max uptime -->
                      <template x-if="t.max_uptime_unit != 'disabled'">
                        <div class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                          <span class="font-medium">Max Uptime:</span> <span x-text="getMaxUptime(t.max_uptime, t.max_uptime_unit)"></span>
                        </div>
                      </template>
                    </div>
                  </td>

                  <!-- Availability (desktop only) -->
                  {{ if or .permissionManageTemplates (not .isLeafNode) }}
                  <td class="px-4 py-3 hidden md:table-cell">
                    <template x-if="t.group_names.length">
                      <div>
                        <div class="text-xs text-gray-500 dark:text-gray-400 font-medium mb-1">Groups:</div>
                        <div class="flex flex-wrap gap-1">
                          <template x-for="group in t.group_names">
                            <span class="inline-block bg-yellow-100 text-yellow-800 text-xs font-medium px-1.5 py-0.5 rounded-sm dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300 whitespace-nowrap" x-text="group"></span>
                          </template>
                        </div>
                      </div>
                    </template>
                    <template x-if="t.zones.length">
                      <div :class="t.group_names.length ? 'mt-2' : ''">
                        <div class="text-xs text-gray-500 dark:text-gray-400 font-medium mb-1">Zones:</div>
                        <div class="flex flex-wrap gap-1">
                          <template x-for="l in t.zones">
                          <span class="inline-block bg-yellow-100 text-yellow-800 text-xs font-medium px-1.5 py-0.5 rounded-sm dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300 whitespace-nowrap" x-text="l"></span>
                          </template>
                        </div>
                      </div>
                    </template>
                    <template x-if="!t.group_names.length && !t.zones.length">
                      <span class="text-xs text-gray-500 dark:text-gray-400">-</span>
                    </template>
                  </td>
                  {{ end }}

                  <!-- Actions -->
                  <td class="px-4 py-3">
                    <div class="flex items-center justify-end gap-2">
                      {{ if and (not .permissionManageTemplates) (not .permissionManageSpaces) (not .isLeafNode) }}
                        {{ if not .disableSpaceCreate }}
                        <button x-show="t.active" x-cloak @click="createSpaceFromTemplate(t.template_id)" class="btn-primary flex items-center text-xs w-fit whitespace-nowrap">
                          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 mr-1">
                            <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                          </svg> Create Space
                        </button>
                        {{ end }}
                      {{ else }}
                        <template x-if="t.is_managed">
                          <button x-show="t.active" x-cloak @click="createSpaceFromTemplate(t.template_id)" class="btn-primary flex items-center text-xs w-fit whitespace-nowrap">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-4 mr-1">
                              <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
                            </svg> Create Space
                          </button>
                        </template>

                        <template x-if="!t.is_managed">
                          <div x-data>
                            <button @click="$refs.panel.toggle" class="text-gray-500 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-hidden rounded-lg text-sm p-2.5 cursor-pointer">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-5">
                                <path fill-rule="evenodd" d="M10.5 6a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0Zm0 6a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0Zm0 6a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0Z" clip-rule="evenodd" />
                              </svg><span class="sr-only">More</span>
                            </button>

                            <div x-ref="panel" x-float.teleport.placement.bottom-end.flip @click.away="$refs.panel.close" @keydown.window.escape="$refs.panel.close" class="fixed z-50 my-1 text-base p-2 list-none bg-white divide-y divide-gray-100 rounded-lg shadow-xl border border-gray-200 dark:bg-gray-800 dark:border-gray-700 dark:divide-gray-600 block whitespace-nowrap" x-cloak>
                              {{ if not .disableSpaceCreate }}
                              <button x-show="t.active" x-cloak @click="$refs.panel.close; createSpaceFromTemplate(t.template_id)" class="group nav-item text-sm px-4 w-full" role="menuitem">
                                <svg class="size-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 0 0 4.5 4.5H18a3.75 3.75 0 0 0 1.332-7.257 3 3 0 0 0-3.758-3.848 5.25 5.25 0 0 0-10.233 2.33A4.502 4.502 0 0 0 2.25 15Z" />
                                </svg> Create Space
                              </button>
                              {{ end }}
                              {{ if or .permissionManageTemplates .isLeafNode}}
                              <button @click="$refs.panel.close; editTemplate(t.template_id)" class="group nav-item text-sm px-4 w-full" role="menuitem">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-2">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg> Edit
                              </button>
                              <button @click="$refs.panel.close; duplicateTemplate(t.template_id)" class="group nav-item text-sm px-4 w-full" role="menuitem">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-2">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
                                </svg> Duplicate
                              </button>
                              {{ end }}
                              <hr x-show="t.usage === 0" x-cloak class="my-2" />
                              <button x-show="t.usage === 0" x-cloak @click="$refs.panel.close; deleteConfirm.show = true; deleteConfirm.template = t" class="group nav-item text-sm px-4 w-full text-white bg-red-700 hover:bg-red-800 dark:bg-red-600 dark:hover:bg-red-700" role="menuitem">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-2">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                </svg> Delete
                              </button>
                              {{ if and (not .disableSpaceCreate) (not .isLeafNode) }}
                              <hr x-show="canManageSpaces && t.active" x-cloak class="my-2" />
                              <button x-show="t.active" x-show="canManageSpaces" x-cloak @click="$refs.panel.close; chooseUser.show = true; chooseUser.invalidTemplate = false; chooseUser.template = t" class="group nav-item text-sm px-4 w-full" role="menuitem">
                                <svg class="size-4 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 0 0 4.5 4.5H18a3.75 3.75 0 0 0 1.332-7.257 3 3 0 0 0-3.758-3.848 5.25 5.25 0 0 0-10.233 2.33A4.502 4.502 0 0 0 2.25 15Z" />
                                </svg> Create For &hellip;
                              </button>
                              {{ end }}
                            </div>
                          </div>
                        </template>
                      {{ end }}
                    </div>
                  </td>
                </tr>
              </template>
            </template>
          </tbody>
        </table>
      </div>

      <!-- Modal choose user -->
      <div x-cloak x-show="chooseUser.show" x-transition.opacity.duration.200ms x-trap.inert.noscroll="chooseUser.show" @keydown.esc.window="chooseUser.show = false" @click.self="chooseUser.show = false" class="fixed top-0 left-0 right-0 bottom-0 inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-xs sm:items-center lg:p-8" role="dialog" aria-modal="true" aria-labelledby="defaultModalTitle">
        <!-- Modal Dialog -->
        <div x-show="chooseUser.show" x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity" x-transition:enter-start="scale-0" x-transition:enter-end="scale-100" class="flex max-w-lg flex-col gap-4 overflow-visible rounded-lg border border-grey-200 bg-white text-neutral-600 dark:bg-gray-800 dark:border-gray-700 dark:text-neutral-300 shadow-xl">
          <!-- Dialog Header -->
          <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4 dark:border-gray-700 dark:bg-gray-800/20">
            <h3 class="font-semibold tracking-wide text-neutral-900 dark:text-white">Select User</h3>
            <button @click="chooseUser.show = false;" aria-label="close modal">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" stroke="currentColor" fill="none" stroke-width="1.4" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <!-- Dialog Body -->
          <div class="px-4 py-4">

            <p>Select the user to create the space for.</p>

            <div x-show="canManageSpaces">
              <div x-data="autocompleterUser()" x-init="setDataSource('users')" data-parent-var-group="chooseUser" data-parent-variable="forUserId" @refresh-autocompleter.window="refresh()" class="relative mt-2">
                <input x-model="search" class="form-field" type="search" placeholder="Search..." @focus="showList = true" @blur.debounce.200ms="showList = false" x-ref="searchInput" x-init="$nextTick(() => $refs.searchInput.focus())" autofocus>
                <div x-show="showList && filteredOptions.length" x-cloak class="w-full max-h-40 overflow-auto absolute z-50 my-1 text-base p-2 list-none bg-white divide-y divide-gray-100 rounded-lg shadow-xl border border-gray-200 dark:bg-gray-800 dark:border-gray-700 dark:divide-gray-600 block whitespace-nowrap">
                  <ul class="list-none">
                    <template x-for="(option, index) in filteredOptions" :key="index">
                      <li @click="selectOption(option)" class="my-1 cursor-pointer nav-item text-sm">
                        {{ if .useGravatar }}
                        <img :src="`https://www.gravatar.com/avatar/${MD5(option.email)}?s=64&d=mp`" alt="User Avatar" class="size-5 rounded-full mr-2">
                        {{ end }}
                        <div x-text="option.username"></div>
                      </li>
                    </template>
                  </ul>
                </div>
              </div>
            </div>
            <div x-show="chooseUser.invalidUser" class="error-message" x-cloak>Select a valid user.</div>
            <div x-show="chooseUser.invalidTemplate" class="error-message" x-cloak>The selected user can't create a space from the chosen template.</div>

          </div>
          <!-- Dialog Footer -->
          <div class="flex flex-col-reverse justify-between gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4 dark:border-gray-700 dark:bg-gray-800/20 sm:flex-row sm:items-center md:justify-end">
              <button @click="chooseUser.show = false" type="button" class="cursor-pointer whitespace-nowrap rounded-lg px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-600 transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white hover:bg-gray-100 dark:hover:bg-gray-700">Cancel</button>
              <button @click="createSpaceAs" type="button" class="cursor-pointer whitespace-nowrap rounded-lg bg-blue-700 hover:bg-blue-800 px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-white dark:bg-red-600 dark:hover:bg-red-700 dark:focus-visible:outline-white">Create Space</button>
          </div>
        </div>
      </div>

      <!-- Modal delete -->
      <div x-cloak x-show="deleteConfirm.show" x-transition.opacity.duration.200ms x-trap.inert.noscroll="deleteConfirm.show" @keydown.esc.window="deleteConfirm.show = false" @click.self="deleteConfirm.show = false" class="fixed top-0 left-0 right-0 bottom-0 inset-0 z-30 flex items-end justify-center bg-black/20 p-4 pb-8 backdrop-blur-xs sm:items-center lg:p-8" role="dialog" aria-modal="true" aria-labelledby="defaultModalTitle">
        <!-- Modal Dialog -->
        <div x-show="deleteConfirm.show" x-transition:enter="transition ease-out duration-200 delay-100 motion-reduce:transition-opacity" x-transition:enter-start="scale-0" x-transition:enter-end="scale-100" class="flex max-w-lg flex-col gap-4 overflow-hidden rounded-lg border border-grey-200 bg-white text-neutral-600 dark:bg-gray-800 dark:border-gray-700 dark:text-neutral-300 shadow-xl">
          <!-- Dialog Header -->
          <div class="flex items-center justify-between border-b border-neutral-300 bg-neutral-50/60 p-4 dark:border-gray-700 dark:bg-gray-800/20">
            <div class="flex items-center justify-center rounded-full bg-red-500/20 text-red-500 p-1">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            </div>
            <h3 class="font-semibold tracking-wide text-neutral-900 dark:text-white">Confirm Delete</h3>
            <button @click="deleteConfirm.show = false;" aria-label="close modal" class="cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" aria-hidden="true" stroke="currentColor" fill="none" stroke-width="1.4" class="w-5 h-5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
              </svg>
            </button>
          </div>
          <!-- Dialog Body -->
          <div class="px-4 py-4 text-center">
            <p>Are you sure you want to delete the template <strong x-text="deleteConfirm.template.name"></strong>?</p>
          </div>
          <!-- Dialog Footer -->
          <div class="flex flex-col-reverse justify-between gap-2 border-t border-neutral-300 bg-neutral-50/60 p-4 dark:border-gray-700 dark:bg-gray-800/20 sm:flex-row sm:items-center md:justify-end">
              <button @click="deleteConfirm.show = false" type="button" class="cursor-pointer whitespace-nowrap rounded-lg px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-600 transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-neutral-300 dark:focus-visible:outline-white hover:bg-gray-100 dark:hover:bg-gray-700">Keep Template</button>
              <button @click="deleteTemplate(deleteConfirm.template.template_id); deleteConfirm.show = false" type="button" class="group flex items-center cursor-pointer whitespace-nowrap rounded-lg bg-red-700 hover:bg-red-800 px-4 py-2 text-center text-sm font-medium tracking-wide text-neutral-100 transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 dark:text-white dark:bg-red-600 dark:hover:bg-red-700 dark:focus-visible:outline-white">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 mr-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg> Delete Template
              </button>
          </div>
        </div>
      </div>

    </div>
  </div>
</main>
{{ end }}
