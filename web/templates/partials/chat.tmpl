{{ define "chat" }}
{{ if and .aiChatEnabled .permissionUseWebAssistant }}
<!-- Chat Component -->
<div x-data="chatComponent()" x-show="isOpen" x-cloak class="fixed bottom-4 left-4 right-4 z-40 pointer-events-none">

  <div x-show="isOpen" x-transition:enter="transition-all ease-out duration-300"
    x-transition:enter-start="opacity-0 transform translate-y-8 scale-95"
    x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
    x-transition:leave="transition-all ease-in duration-200"
    x-transition:leave-start="opacity-100 transform translate-y-0 scale-100"
    x-transition:leave-end="opacity-0 transform translate-y-8 scale-95"
    class="relative w-full max-w-xl ml-auto max-h-[85vh] bg-white dark:bg-gray-900 rounded-xl shadow-2xl border border-gray-200 dark:border-gray-700 flex flex-col pointer-events-auto"
    style="box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25), 0 0 0 1px rgba(255, 255, 255, 0.1);">

    <!-- Header -->
    <div
      class="flex items-center justify-between p-5 border-b border-gray-200 dark:border-gray-700 bg-gray-50 dark:bg-gray-800 rounded-t-xl">
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
          <svg class="size-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 2a2 2 0 012 2v2h3a3 3 0 013 3v8a3 3 0 01-3 3H7a3 3 0 01-3-3V9a3 3 0 013-3h3V4a2 2 0 012-2zM9 12h.01M15 12h.01M9 16h6" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">AI Assistant</h3>
      </div>
      <div class="flex items-center space-x-2">
        <button @click="$store.chat.clearMessages()"
          class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
          title="Clear chat">
          <svg class="size-5" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path
              d="M20.25 9.84C20.25 9.38 20.07 8.94 19.74 8.61L15.39 4.26C14.71 3.58 13.61 3.58 12.93 4.26L4.26 12.93C3.93 13.26 3.75 13.7 3.75 14.16C3.75 14.62 3.93 15.06 4.26 15.39L8.61 19.74C8.95 20.08 9.39 20.25 9.84 20.25C9.88 20.25 9.93 20.25 9.97 20.24C9.99 20.24 10 20.24 10.02 20.24H18.01C18.42 20.24 18.76 19.9 18.76 19.49C18.76 19.08 18.42 18.74 18.01 18.74H12.06L19.73 11.07C20.06 10.74 20.24 10.3 20.24 9.84H20.25ZM5.32 14.33C5.26 14.27 5.25 14.2 5.25 14.16C5.25 14.12 5.25 14.05 5.32 13.99L9.12 10.19L13.81 14.88L10.01 18.68C9.92 18.77 9.77 18.77 9.67 18.68L5.32 14.32V14.33ZM18.68 10.02L14.88 13.82L10.19 9.13L13.99 5.33C14.08 5.24 14.23 5.24 14.33 5.33L18.68 9.69C18.74 9.75 18.75 9.82 18.75 9.86C18.75 9.9 18.75 9.97 18.68 10.03V10.02Z" />
          </svg>
        </button>
        <button @click="close()"
          class="p-2 text-gray-400 hover:text-gray-600 dark:hover:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors">
          <svg class="size-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Messages -->
    <div
      class="flex-1 overflow-y-auto p-6 space-y-6 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-gray-800 scrollbar-thin scrollbar-track-transparent scrollbar-thumb-gray-300"
      x-ref="messagesContainer">
      <!-- Empty state -->
      <div x-show="messages.length === 0" class="flex flex-col items-center justify-center h-full text-center py-12">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">knot assistant</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-1">Ask me anything or explore your spaces and their contents.</p>
        <p class="text-sm text-gray-500 dark:text-gray-500">I'm here to help, but remember I'm an AI, so I might not always get it right!</p>
      </div>

      <template x-for="message in messages" :key="message.id">
      <div class="flex" :class="message.role === 'user' ? 'justify-end' : 'justify-start'">
        <div class="max-w-xs sm:max-w-sm lg:max-w-lg"
          :class="message.role === 'user' ? '' : 'flex items-start space-x-3'">
          <!-- Assistant Avatar -->
          <template x-if="message.role === 'assistant'">
            <div
              class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
              <svg class="size-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 2a2 2 0 012 2v2h3a3 3 0 013 3v8a3 3 0 01-3 3H7a3 3 0 01-3-3V9a3 3 0 013-3h3V4a2 2 0 012-2zM9 12h.01M15 12h.01M9 16h6" />
              </svg>
            </div>
          </template>

          <div class="flex-1 min-w-0">
            <div class="px-4 py-3 rounded-2xl shadow-sm"
              :class="message.role === 'user' ? 'bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white ml-8' : 'bg-white dark:bg-gray-800 text-gray-900 dark:text-white border border-gray-200 dark:border-gray-700'">
              <!-- Thinking section -->
              <template x-if="message.role === 'assistant' && message.fragments?.thinking">
                <div x-data="{ showThinking: false }" class="mb-3">
                  <button @click="showThinking = !showThinking"
                    class="text-xs text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 flex items-center space-x-2 mb-2 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                    <svg class="size-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z">
                      </path>
                    </svg>
                    <span class="font-medium">Thinking</span>
                    <svg class="size-3 ml-auto transition-transform duration-200"
                      :class="showThinking ? 'rotate-90' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </button>
                  <div x-show="showThinking" x-transition:enter="transition-all ease-out duration-200"
                    x-transition:enter-start="opacity-0 max-h-0" x-transition:enter-end="opacity-100 max-h-96"
                    x-transition:leave="transition-all ease-in duration-200"
                    x-transition:leave-start="opacity-100 max-h-96" x-transition:leave-end="opacity-0 max-h-0"
                    class="text-xs text-gray-600 dark:text-gray-300 bg-gray-50 dark:bg-gray-900 p-3 rounded-lg border-l-4 border-blue-400 mb-3 overflow-hidden"
                    x-html="formatContent(message.fragments.thinking)"></div>
                </div>
              </template>

              <!-- Tool results section -->
              <template
                x-if="message.role === 'assistant' && message.fragments?.toolResults && message.fragments.toolResults.length > 0">
                <div x-data="{ showToolOutput: false }" class="mb-3">
                  <button @click="showToolOutput = !showToolOutput"
                    class="text-xs text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200 flex items-center space-x-2 mb-2 p-1 rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                      stroke="currentColor" class="size-3">
                      <path stroke-linecap="round" stroke-linejoin="round"
                        d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z" />
                    </svg>
                    <span class="font-medium">Tool Output</span>
                    <svg class="size-3 ml-auto transition-transform duration-200"
                      :class="showToolOutput ? 'rotate-90' : ''" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </button>
                  <div x-show="showToolOutput" x-transition:enter="transition-all ease-out duration-200"
                    x-transition:enter-start="opacity-0 max-h-0" x-transition:enter-end="opacity-100 max-h-96"
                    x-transition:leave="transition-all ease-in duration-200"
                    x-transition:leave-start="opacity-100 max-h-96" x-transition:leave-end="opacity-0 max-h-0"
                    class="space-y-2 overflow-hidden">
                    <template x-for="result in message.fragments.toolResults">
                      <div
                        class="text-xs bg-gray-50 dark:bg-gray-900 p-3 rounded-lg border border-gray-200 dark:border-gray-700 min-w-0">
                        <div class="font-semibold text-gray-700 dark:text-gray-300 mb-2" x-text="result.name"></div>
                        <div class="overflow-x-auto max-h-64">
                          <pre class="text-gray-600 dark:text-gray-400 font-mono text-xs py-4 whitespace-pre"
                            x-text="result.result"></pre>
                        </div>
                      </div>
                    </template>
                  </div>
                </div>
              </template>

              <!-- Main content -->
              <div class="prose prose-sm max-w-none dark:prose-invert"
                x-html="formatContent(message.fragments?.content || message.content || '')"></div>
            </div>
          </div>
        </div>
      </div>
      </template>

      <!-- Loading indicator -->
      <div x-show="isLoading" class="flex justify-start">
        <div class="flex items-start space-x-3">
          <div
            class="flex-shrink-0 w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
            <svg class="size-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 2a2 2 0 012 2v2h3a3 3 0 013 3v8a3 3 0 01-3 3H7a3 3 0 01-3-3V9a3 3 0 013-3h3V4a2 2 0 012-2zM9 12h.01M15 12h.01M9 16h6" />
            </svg>
          </div>
          <div
            class="bg-white dark:bg-gray-800 px-4 py-3 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-700">
            <div class="flex space-x-1">
              <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce"></div>
              <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce [animation-delay:0.1s]"></div>
              <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce [animation-delay:0.2s]"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Input area -->
    <div class="p-5 border-t border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-900 rounded-b-xl">
      <form @submit.prevent="sendMessage()" class="flex space-x-3 items-end">
        <textarea x-ref="messageInput" x-model="currentMessage" @input="adjustInputSize()"
          @keydown="handleKeyDown($event)" :disabled="isLoading" :rows="inputRows" placeholder="Ask me anything..."
          class="flex-1 px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-800 dark:text-white resize-none transition-all duration-200 shadow-sm caret-gray-900 dark:caret-white"></textarea>

        <!-- Send Button -->
        <button x-show="!isLoading" :disabled="!currentMessage.trim()" type="submit"
          class="h-[42px] px-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-xl hover:from-blue-600 hover:to-purple-700 disabled:opacity-50 disabled:cursor-not-allowed flex-shrink-0 transition-all duration-200 shadow-sm hover:shadow-md">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8">
            </path>
          </svg>
        </button>

        <!-- Stop Button -->
        <button x-show="isLoading" @click="stopGeneration()" type="button"
          class="h-[42px] px-3 bg-gradient-to-r from-red-500 to-red-600 text-white rounded-xl hover:from-red-600 hover:to-red-700 flex-shrink-0 transition-all duration-200 shadow-sm hover:shadow-md">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 6h12v12H6z"></path>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>

<button @click="$store.chat.toggle()" x-show="!$store.chat.isOpen"
  class="fixed bottom-4 right-4 z-40 bg-blue-500 hover:bg-blue-600 text-white p-3 rounded-full shadow-lg transition-colors">
  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
      d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
    </path>
  </svg>
</button>
{{ end }}
{{ end }}